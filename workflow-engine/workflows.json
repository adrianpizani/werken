{
  "blog-new-post": {
    "description": "Triggered when a new article is published on the blog.",
    "actions": [
      {
        "type": "send_notification",
        "params": {
          "channel": "telegram",
          "recipient_id": "YOUR_TELEGRAM_USER_ID",
          "message": "New post published! Check out '{title}' on the blog."
        }
      },
      {
        "type": "send_notification",
        "params": {
          "channel": "email",
          "recipient": "{user_email}",
          "subject": "Welcome!",
          "message": "This message will be logged to the console."
        }
      },
      {
        "type": "process_image",
        "params": {
          "source_url": "{cover_image_url}",
          "watermark": "my-blog.com",
          "formats": ["thumbnail", "social_banner"]
        }
      },
      {
        "type": "archive_event",
        "params": {
          "source": "blog",
          "event": "new_post"
        }
      }
    ]
  },
  "user-registered": {
    "description": "Triggered when a new user registers on the platform.",
    "actions": [
      {
        "type": "send_notification",
        "params": {
          "channel": "email",
          "recipient": "{user_email}",
          "subject": "Welcome to the platform!",
          "html_template": "welcome.html"
        }
      },
      {
        "type": "archive_event",
        "params": {
          "source": "user_platform",
          "event": "registration"
        }
      }
    ]
  }
}